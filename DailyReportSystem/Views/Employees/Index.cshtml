@model IEnumerable<DailyReportSystem.Models.EmployeesIndexViewModel>

@{
    ViewBag.Title = "従業員一覧";
}

<h2>従業員一覧</h2>

<p>
    @Html.ActionLink("新規従業員の登録", "Create")
</p>
@* table-hover:マウスホバー時に行がハイライトされる。*@
@* table-striped:背景色が縞模様になる。*@
<table class="table table-hover table-striped">
    <tr>
        <th>
            @* 修正 *@
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @* 修正 *@
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>

            <td>
                @if (item.DeleteFlg == 1)
                {
                    @:削除済み
                }
                else
                {
                    @Html.ActionLink("編集する", "Edit", new { id = item.Id }) @:|
                    @Html.ActionLink("詳細を表示", "Details", new { id = item.Id }) @:|
                    @Html.ActionLink("削除", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>